<h2>プロフィール</h2>

<%= form_with model: @user, url: create_or_update_profile_path, method: :patch do |f| %>

  <div>
    <%= f.label :avatar, "アイコン画像：" %>
    <%= f.file_field :avatar %>
  </div>

    <div>
      <%= f.label :name, "名前：" %>
      <%= f.text_field :name, placeholder: "新しい名前を入力" %>
    </div>

  <div>
    <%= f.label :introduction, "自己紹介" %><br>
    <%= f.text_area :introduction, cols: 30, rows: 3, placeholder: "入力" %>
  </div>

  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>


