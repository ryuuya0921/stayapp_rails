
  <h2>登録済み一覧</h2>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag(room.image, width: "100", height: "60") if room.image.attached? %></td>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= number_to_currency(room.price) %></td>
        <td><%= room.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to '編集', edit_room_path(room), class: 'button edit-button' %>
          <%= link_to '施設を削除', room_path(room), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'button' %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>
